---
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "Discord-Wannabe — Retro Communicator" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Discord-Wannabe to retro-komunikator inspirowany latami 90., łączący czaty, głos i klimat kaset VHS."
    />
    <meta name="application-name" content="Discord-Wannabe" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bruno+Ace+SC&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script is:inline>
      /* eslint-disable */
      // Prevent theme flash by applying theme immediately
      (function () {
        const savedTheme = localStorage.getItem("theme");
        const systemTheme = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        const theme = savedTheme || systemTheme;

        if (theme === "dark") {
          document.documentElement.classList.add("dark");
        }
      })();
      /* eslint-enable */
    </script>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <script is:inline>
      /* eslint-disable */
      // Ensure theme persists across view transitions
      document.addEventListener("astro:after-swap", function () {
        const savedTheme = localStorage.getItem("theme");
        const systemTheme = window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
        const theme = savedTheme || systemTheme;

        document.documentElement.classList.toggle("dark", theme === "dark");
      });
      /* eslint-enable */
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
