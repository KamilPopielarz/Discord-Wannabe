---
import Layout from "../layouts/Layout.astro";
import { ThemeToggle } from "../components/ui/ThemeToggle";
import { RetroGridBackground } from "../components/ui/RetroGridBackground";
import { GlitchText } from "../components/ui/GlitchText";
import { TypingAnimation } from "../components/ui/TypingAnimation";
---

<Layout title="Discord-Wannabe — Retro komunikator">
  <main class="relative flex min-h-screen items-center justify-center overflow-hidden bg-background p-4">
    <RetroGridBackground client:load />

    <div class="absolute right-4 top-4 z-20">
      <ThemeToggle client:load />
    </div>

    <section class="relative z-10 w-full max-w-3xl">
      <div class="retro-card rounded-2xl border border-[var(--border)] p-8 shadow-retro-card">
        <span class="retro-chip mb-4 inline-flex items-center gap-2">
          <span class="h-2 w-2 rounded-full bg-[var(--retro-orange-bright)] animate-pulse" />
          Discord-Wannabe // Platform Update
        </span>
        <header class="space-y-3 text-center">
          <h1 class="retro-heading text-4xl md:text-5xl">Discord-Wannabe</h1>
          <p class="text-base text-[var(--retro-cream)]/80">
            <GlitchText client:load text="Nowoczesny komunikator głosowo-tekstowy społeczności Discord-Wannabe" />
          </p>
        </header>

        <div class="mt-8 grid gap-4 md:grid-cols-3">
          <a href="/login" class="retro-button block rounded-xl py-4 text-center text-sm" aria-label="Przejdź do logowania">
            Zaloguj się
          </a>
          <a href="/register" class="retro-button block rounded-xl bg-[var(--retro-teal)] text-center text-sm text-[var(--sidebar-primary-foreground)]" aria-label="Przejdź do rejestracji">
            Zarejestruj się
          </a>
          <a href="/guest" class="retro-button block rounded-xl bg-[var(--retro-plum)] text-center text-sm text-[var(--sidebar-primary-foreground)]" aria-label="Dołącz jako gość">
            Dołącz jako gość
          </a>
        </div>

        <div class="mt-10 grid gap-3 md:grid-cols-2">
          <div class="retro-panel rounded-xl p-4">
            <p class="text-sm font-semibold text-[var(--retro-orange-bright)]">
              <TypingAnimation client:load text="• Tekst + głos w jednej aplikacji" speed={25} />
            </p>
            <p class="text-xs text-[var(--retro-cream)]/70">Serwery Discord-Wannabe aktualizują się w czasie rzeczywistym.</p>
          </div>
          <div class="retro-panel rounded-xl p-4">
            <p class="text-sm font-semibold text-[var(--retro-orange-bright)]">• Sesje gościa 24h</p>
            <p class="text-xs text-[var(--retro-cream)]/70">Wejdź do chatu bez konta i ciesz się rozmową ze znajomymi.</p>
          </div>
          <div class="retro-panel rounded-xl p-4">
            <p class="text-sm font-semibold text-[var(--retro-orange-bright)]">• Pokoje głosowe LiveKit</p>
            <p class="text-xs text-[var(--retro-cream)]/70">Integracja LiveKit jest w trakcie wdrażania (in progress).</p>
          </div>
          <div class="retro-panel rounded-xl p-4">
            <p class="text-sm font-semibold text-[var(--retro-orange-bright)]">• Kontrola serwerów</p>
            <p class="text-xs text-[var(--retro-cream)]/70">Rangi, moderacja i bezpieczeństwo.</p>
          </div>
        </div>
      </div>

      <div class="retro-ticker mt-5 rounded-full border border-[var(--border)] text-center text-xs uppercase tracking-[0.4em] text-[var(--retro-orange-bright)]">
        <span>Discord-Wannabe • Tekst i głos • LiveKit in progress • Kliknij Theme Toggle aby zmienić tryb</span>
      </div>
    </section>
  </main>
</Layout>
