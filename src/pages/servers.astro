---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Serwery - Discord Wannabe">
  <main class="min-h-screen bg-background">
    <div id="servers-dashboard-root" class="container mx-auto p-6">
      <!-- React Island bÄ™dzie zamontowany tutaj -->
    </div>
  </main>
</Layout>

<script>
  import { createRoot } from 'react-dom/client';
  import { ServersDashboardPage } from '../components/servers/ServersDashboardPage';
  import { createElement } from 'react';

  const container = document.getElementById('servers-dashboard-root');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(ServersDashboardPage));
  }
</script>
