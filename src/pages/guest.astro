---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dołącz jako gość - Discord Wannabe">
  <main class="min-h-screen flex items-center justify-center bg-background">
    <div id="guest-page-root" class="w-full max-w-md p-6">
      <!-- React Island będzie zamontowany tutaj -->
    </div>
  </main>
</Layout>

<script>
  import { createRoot } from 'react-dom/client';
  import { GuestJoinPage } from '../components/guest/GuestJoinPage';
  import { createElement } from 'react';

  const container = document.getElementById('guest-page-root');
  if (container) {
    const root = createRoot(container);
    root.render(createElement(GuestJoinPage));
  }
</script>
